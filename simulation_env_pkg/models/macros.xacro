<?xml version="1.0"?>

<xacro:macro name="default_inertial" params="mass">
  <inertial>
    <mass value="${mass}" />
    <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" />
  </inertial>
</xacro:macro>

<xacro:macro name="wheel_link" params="name" "rpy" "xyz" "wheel_radius" "wheel_width" "joint_name" "joint_rpy" "joint_xyz"> 
  <link name="${name}">
    <visual>
      <origin rpy="${rpy}" xyz="${xyz}"/>
        <geometry>
          <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
        </geometry>
        <material name="black"/>
      </visual>
  </link>

  <joint name="${joint_name}" type="revolute">
    <parent link="chassis_link"/>
    <child link="${name}"/>
    <origin rpy="{joint_rpy}" xyz="${joint_xyz}"/>
  </joint>
<xacro:macro>



<!-- Some time-pass -->

